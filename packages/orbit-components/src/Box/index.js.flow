export type SpacingToken =
  | "none"
  | "xx-small"
  | "x-small"
  | "small"
  | "medium"
  | "large"
  | "x-large"
  | "xx-large"
  | "xxx-large";

export type SpacingObject = {
  left?: SpacingToken,
  top?: SpacingToken,
  right?: SpacingToken,
  bottom?: SpacingToken,
};

export type MediaQueryObject = $Diff<
  // eslint-disable-next-line no-use-before-define
  Props,
  { as: *, children: *, mediumMobile: *, largeMobile: *, tablet: *, desktop: *, largeDesktop: * },
>;

